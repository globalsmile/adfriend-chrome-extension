{
  "manifest_version": 3,
  "name": "AdFriend",
  "version": "1.0",
  "description": "Replace ad elements with positive content widgets.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "<all_urls>",
    "https://api.quotable.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
