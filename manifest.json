{
  "manifest_version": 3,
  "name": "AdFriend",
  "version": "1.0",
  "description": "A Chrome extension that replaces ad elements with positive, interactive content widgets and refreshes local ZenQuotes data periodically.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://zenquotes.io/*",
    "https://adfriend-chrome-extension-backend.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "options/index.html"
  }
}
